{
  "name": "pixel-scaler",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "homepage": "https://irokaru.github.io/pixel-scaler",
  "repository": "https://github.com/irokaru/pixel-scaler",
  "author": {
    "name": "irokaru",
    "email": "karuta@nononotyaya.net",
    "url": "https://nononotyaya.net/"
  },
  "scripts": {
    "dev": "vite",
    "dev:tauri": "tauri dev",
    "build": "vue-tsc -b && vite build && npm run clean",
    "build:standalone": "vue-tsc -b && vite build --mode standalone && npm run clean",
    "build:tauri": "tauri build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:browser": "npm run test -- --project browser",
    "test:browser:watch": "npm run test:watch -- --project browser",
    "test:e2e": "playwright test",
    "clean": "rm -f *.tsbuildinfo vite.config.d.ts vitest.config.d.ts vite/*/*.d.ts",
    "lint-staged": "lint-staged",
    "tauri": "tauri",
    "prepare": "test -d .husky && husky || echo 'Skipping husky'; playwright install || echo 'Skipping playwright'"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-brands-svg-icons": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/vue-fontawesome": "^3.1.2",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "fflate": "^0.8.2",
    "license-checker": "^25.0.1",
    "pinia": "^3.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.22",
    "vue-gtag": "^3.6.1",
    "vue-i18n": "^11.1.12",
    "vue-tsc": "^3.1.0",
    "xbr-js": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@tauri-apps/cli": "^2.8.4",
    "@types/license-checker": "^25.0.6",
    "@types/node": "^24.6.0",
    "@types/wicg-file-system-access": "^2023.10.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "unplugin-fonts": "^1.4.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  }
}
